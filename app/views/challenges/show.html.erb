<p id="notice"><%= notice %></p>


<div class="span8">
	
	<div class="row-2">
		<div class="span2">
			<img src="<%=asset_path "challenge.png"%>" width="100px" height="100px"/>
		</div>
		<div class="span6">
			<div class="detail-highlights">
				<p id="challenge-name">
			  		<h5><%= @challenge.name %></h5>
				</p><br>

				<p>
			  		<strong>AWARD &nbsp;</strong>
			  		<%= @challenge.award %>
				</p>

				<p>
			  		DEADLINE &nbsp;
			  		<%= @challenge.deadline %>
				</p>

				<p>
			  		POSTED &nbsp;
			  		<%= @challenge.post_date %>
				</p>

				<p id="challenge-url">
			  		WEBSITE &nbsp;
			  		<%= @challenge.url %>
				</p>
			</div><br>
			
			<p>
			  <%= @challenge.description %>
			</p>
			<br>
	   <!--	<p>
			  <b>Image url:</b>
			  <%= @challenge.image_url %>
			</p> -->
			<div class="detail-highlights"><p>RULES</p></div>
			<p><%= @challenge.rules %>
			</p><br>
			
			<div class="detail-highlights"><p>SHARE</p></div>
		</div>

			<%= link_to 'Edit', edit_challenge_path(@challenge) %> |
			<%= link_to 'Back', challenges_path %>
	</div>
		
</div>