<%= form_tag sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div><br />
  <div class="actions">
    <%= submit_tag "Login", :class => "user-submit-button" %>
  </div>

<% end %>