<!DOCTYPE html>
<html>
<head>
  <title>ChallengeFinder!</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  
    	<!-- begin FB script -->
    	<div id="fb-root"></div>
		<script>(function(d, s, id) {
  			var js, fjs = d.getElementsByTagName(s)[0];
  			if (d.getElementById(id)) return;
  			js = d.createElement(s); js.id = id;
  			js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));</script>
		<!-- end FB script -->	
  <div class="container">
  	<%= render :partial => "layouts/navbar" %>
  	<div class="page-border">
  		<div class="notice-row">
  			<div class="span12">
  				<p class="notice"><%= notice %></p>
  				<!--<p class="alert"><%= alert %></p> -->
  			</div>
  		</div>
  	
    	<div class="row">
      		<div class="span12"><%= yield %>
      		</div>
      	<!--<div class="span3">
				<a class="twitter-timeline" data-dnt=true href="https://twitter.com/ChallengeFinder" data-widget-id="258039376301408258">Tweets by @ChallengeFinder</a>
				<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      		</div>-->
    	</div>
  	</div>


<!-- Start of Footer -->
	
	  <footer>
		 
			 <table class="footer-nav">
			   <tbody>
					<tr><%= link_to 'CHALLENGES', challenges_path %>
						<%= link_to 'ABOUT US', about_path %>
						<%= link_to 'PRIVACY POLICY', about_path %>				
						<% if current_user %>
						<%= link_to "EDIT PROFILE", edit_user_path(current_user.id) %>
						<%= link_to "LOGOUT", :logout %>
						<% else %>
						<%= link_to "REGISTER", new_user_path %>
						<%= link_to "LOGIN", :login %>
						FOLLOW ON <a href="https://twitter.com/CauseRoot" target="_blank"><img src="<%=asset_path "twitter-icon-wht.png"%>"/></a> <a href="http://www.facebook.com/pages/CauseRoot/219709724825671" target="_blank"><img src="<%=asset_path "facebook-icon-wht.png"%>"/></a>
					 </tr>
						<% end %>     
				</tbody>
			 </table>
		 
		 <div class="footer-search-bar">
			<%= form_tag search_challenges_path, :method => :get, :class => "navbar-search pull-right" do %>
			<p>
				<%= text_field_tag :q, params[:q], :class => "search-query", :placeholder => "Search" %>
			</p>
		 </div>
			<% end %>     
	
		<div class="copyright"> Copyright 2013 ChallengeFinder </div>
	  </footer>
  </div>
<!-- End of Footer -->
  	
</body>
</html>

